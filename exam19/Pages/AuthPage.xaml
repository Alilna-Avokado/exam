<Page x:Class="exam19.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:exam19.Pages"
      mc:Ignorable="d" 
      Background="AliceBlue"
      Visibility="Visible"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <Label Content="Логин"/>
        <TextBox x:Name="LoginTB" Height="30" Width="150"/>
        <Label Content="Пароль"/>
        <TextBox x:Name="PasswordTB" Height="30" Width="150" Margin="0,0,0,10"/>
        <Button x:Name="EnterBtn" Content="Вход"  Height="30" Width="150" />
    </StackPanel>
</Page>
