<Window x:Class="exam19.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:exam19"
        mc:Ignorable="d"
        
        Title="Главное окно" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Логин"/>
            <TextBox x:Name="LoginTB" Height="30" Width="150"/>
            <Label Content="Пароль"/>
            <TextBox x:Name="PasswordTB" Height="30" Width="150" Margin="0,0,0,10"/>
            
            <Button x:Name="EnterBtn" Content="Вход"  Height="30" Width="150" Click="EnterBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
